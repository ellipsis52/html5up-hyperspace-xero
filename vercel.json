{
  "builds": [
    { "src": "html5up-hyperspace/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/html5up-hyperspace/$1" }
  ]
}

// index.html
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Website</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <h1>Welcome to My Website</h1>
    </header>
    <main>
      <p>This is my homepage.</p>
    </main>
    <footer>
      <p>&copy; 2021 My Website</p>
    </footer>
  </body>
</html>
"routes": [
  { "src": "/", "dest": "/html5up-hyperspace/index.html" },
  { "src": "/(.*)", "dest": "/html5up-hyperspace/$1" }
]

// css/style.css
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}
header {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
}
main {
  padding: 20px;
}
footer {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
}